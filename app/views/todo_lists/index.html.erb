<section class='todo-app' ng-controller="todoListController">
  <h1 class='align-center'>Todo</h1>

  <div class="form-group col-lg-12 col-sm-12">
    <form ng-submit="addTask()">
      <input type="text" placeholder="Add a new task here and press enter" ng-model="newList"  ng-model="dynamicPopover.content" class="form-control">
    </form>
  </div>

  <table class='table table-striped'>
    <thead>
      <tr>
        <th><h1 class='align-center'>Todays List</h1></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
        <tr class='align-center' ng-repeat="(key, todoList) in todoLists">
          <td class="{{checkbox}} todo-lists"><input class='todo-checkbox' type="checkbox" ng-model='list.isSelected'
                                      ng-true-value="'finished'"
                                      ng-false-value="'unfinished'"
                                      ng-click="completeTask(key)"><span>{{ todoList.list }}</span></td>
        </tr>
    </tbody>
  </table>

  <table class='table table-striped'>
    <thead>
      <tr>
        <th><h1 class='align-center'>Completed List</h1></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
        <tr class='align-center' ng-repeat="(key, completeTask) in completeTasks">
          <td class="todo-lists"><span>{{ completeTask.list }} {{completeTask.completed_time}}</span></td>
        </tr>
    </tbody>
  </table>
</section>
